@model IEnumerable<MinerTrabajoFInal.Models.Resultado>
@{
    ViewData["Title"] = "Index";
}
<h2>Resultados</h2><br>
<form asp-controller="Resultado" asp-action="Buscar" method="post">
 <table class="table table-bordered">
      <input type="number" class="form-control"  name="valor"> 
      <button class="btn btn-primary"> Buscar </button>
  </form>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.numerorecpcion)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.idcliente)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.tipo_analisis)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.valor)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.precio)
                </th>    
                <th scope="col">
                    opcion
                </th>                                  
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.numerorecpcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idcliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo_analisis)
            </td>                        
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>                      
            <td scope="row">
                <a asp-action="Editar" asp-route-id="@item.numerorecpcion">Editar</a> 
            </td>            
        </tr>
    }        
    </tbody> 

    
</table>