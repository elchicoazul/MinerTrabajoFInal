@model IEnumerable<MinerTrabajoFInal.Models.Cliente>

@{
    var count = 1;
}

<div class="container">
    <br>
    <h2>Registros</h2>
    <a class="btn btn-success float-right" role="button" asp-action="Crear">Registrar</a><br>
    <br><table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                    <th scope="col">
                        â„–
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.razonsocial)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.dni)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.direccion)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.telefono)
                    </th>
                    <th scope="col" colspan="2">
                        @Html.DisplayNameFor(model => model.correo)
                    </th>
            </tr>
        </thead>

        <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @count
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.razonsocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.correo)
                </td>
                <th scope="row">
                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-success active" role="button">Editar</a> 
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-success active" role="button" onclick="return confirm('Esta seguro que desea eliminar? : @item.id ')">Eliminar</a>
                </th>
            </tr>
            count++;
        }        
        </tbody> 
    </table>
</div>