@{
    ViewData["Title"] = "Conectarse";
}

<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="account" class="form" action="" method="post" >
                        <h3 class="text-center text-info">Login</h3>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="text-info"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="text-info"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                
                        <div class="form-group">
                            <div class="form-group">
                                </div>
                                    <div id="register-link" class="text-right">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-info">Olvidaste tu Cuenta?</a>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-info">Registrar aqui</a>
                                </div>
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>

                            <button type="submit" class="btn btn-info btn-md">Conectarse</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
